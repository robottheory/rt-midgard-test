"""Time Interval used for querying histories"""
enum LegacyInterval {
  """24 hour period"""
  DAY

  """7 day period"""
  WEEK

  """Month period"""
  MONTH
}

enum Interval {
  """5 minute period"""
  MINUTE5

  """Hour period"""
  HOUR

  """Day period"""
  DAY

  """Week period"""
  WEEK

  """Month period"""
  MONTH

  """Quarter period"""
  QUARTER

